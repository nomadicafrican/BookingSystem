@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MyBookers</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .section {
            text-align: center;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            transition: transform 0.3s ease;
        }

            .section:hover {
                transform: translateY(-5px);
            }

            .section img {
                width: 100%;
                border-radius: 10px;
                margin-bottom: 10px;
            }

        .offer {
            background-color: #ffa500;
            color: #fff;
            padding: 20px;
            border-radius: 10px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <a href="@Url.Action("Index", "AdminFlight")">
                    <div class="section">
                        <img src="https://img.freepik.com/free-photo/planes-wing-cuts-through-sky-cotton-candy-clouds-during-radiant-sunset_91128-4456.jpg" alt="Image 1">
                        <h3>Flights</h3>
                        <p>Soar Above the Ordinary – Embrace the skies with us and discover destinations beyond your dreams. Let your adventures take flight!</p>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a href="@Url.Action("Index", "AdminHotel")">
                    <div class="section">
                        <img src="https://images.pexels.com/photos/258154/pexels-photo-258154.jpeg?cs=srgb&dl=pexels-pixabay-258154.jpg&fm=jpg" alt="Image 2">
                        <h3>Hotels</h3>
                        <p>Your Sanctuary Away from Home – Experience the perfect blend of comfort and elegance with our luxurious accommodations. Unwind in style!</p>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a href="@Url.Action("Index", "AdminCarRental")">
                    <div class="section">
                        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcR5J6ePXGvXgHI2-xSXJTTvM6UMfQ9f9x0cyn9Pd5eUQw&s" alt="Image 3">
                        <h3>Rental Car</h3>
                        <p>Drive the Extra Mile – Explore at your own pace with our top-tier, reliable car rentals. Freedom awaits on the open road!</p>
                    </div>
                </a>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-8">
               
            </div>
        </div>
    </div>
</body>
</html>

